import React from "react";

export function PodiumLeaderboards() {
  interface Leader {
    name: string;
    rank: 1 | 2 | 3;
  }

  const leaders: Leader[] = [
    { name: "Alice", rank: 2 },
    { name: "Bob", rank: 1 },
    { name: "Charlie", rank: 3 },
  ];

  return (
    <div className="w-full flex items-end h-[300px]">
      {leaders.map((leader) => {
        const height = leader.rank === 1 ? "h-48" : leader.rank === 2 ? "h-36" : "h-28";

        const bgColor =
          leader.rank === 1 ? "bg-yellow-300" : leader.rank === 2 ? "bg-gray-300" : "bg-amber-700";

        return (
          <div className="flex flex-col justify-center items-center gap-6 w-full" key={leader.name}>
            <p className="text-black text-2xl">#{leader.rank}</p>
            <div className="flex flex-col items-center justify-end relative w-full">
              <div
                className={`w-full ${height} ${bgColor} rounded-t-lg flex items-center justify-center text-sm font-semibold text-black shadow-lg`}
              >
                <img src="https://placehold.co/10" className="aspect-square rounded-full h-15" />
                <p>{leader.name}</p>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  );
}
